<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <Version>5.13.1</Version>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="5.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="5.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="6.0.0-rc.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="6.0.0-rc.*" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0-rc.*" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Locales\*.json" />
    <EmbeddedResource Include="Locales\*.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="*.json" />
    <Content Remove="wwwroot\**\*.*" />
    <Content Include="wwwroot\css\bootstrap.blazor.bundle.min.css" />
    <Content Include="wwwroot\css\motronic.min.css" />
    <Content Include="wwwroot\js\bootstrap.blazor.bundle.min.js" />
    <Content Include="wwwroot\lib\summernote\font\*.*" />
    <None Include="*.json" />
    <None Include="wwwroot\**\*.*" />
  </ItemGroup>

</Project>
